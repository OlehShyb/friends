<p style="color: green"><%= notice %></p>
<h1>All info about friends:</h1>
<style>
  .ivoryColor{
      color: ivory;
      text-decoration-line: none;
  }
  .blueColor{
      color: dodgerblue;
      text-decoration-line: none;
  }
  .redColor{
      color: darkred;
  }

</style>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th colspan="3"> </th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td>
          <%=
            url_instagram = "www.instagram.com/" + friend.instagram.delete('@') + "/"
            link_to friend.instagram, "https://#{url_instagram}", :target => '_blank', class: 'blueColor'
          %>
        </td>
        <td><%= link_to 'Show', friend, class: 'ivoryColor' %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: 'ivoryColor' %></td>
        <td><%= button_to 'Destroy', friend, method: :delete, class: 'redColor' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>


